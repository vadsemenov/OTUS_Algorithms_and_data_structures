<Window x:Class="Compression.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Compression"
        mc:Ignorable="d"
        Title="Huffman file compression" Height="300" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Button x:Name="compressBtn" Grid.Column="0" Grid.Row="1" Width="200" Height="50" Content="Compress file" Click="CompressBtn_Click" />
        <Button x:Name="decompressBtn" Grid.Column="0" Grid.Row="2" Width="200" Height="50" Content="Decompress file" Click="DecompressBtn_Click" />
        <ComboBox x:Name="comboBox" HorizontalAlignment="Center" VerticalAlignment="Center" Width="250" SelectionChanged="ComboBox_OnSelectionChanged"/>
    </Grid>
</Window>